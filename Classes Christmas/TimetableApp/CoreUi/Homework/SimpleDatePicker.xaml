<UserControl
    x:Class="TimetableApp.SimpleDatePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimetableApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="226" Width="475">
    
    <Grid Background="White">
    	<TextBlock HorizontalAlignment="Left" Height="21" Margin="42,10,0,0" TextWrapping="Wrap" Text="Day" VerticalAlignment="Top" Width="33" FontSize="16"/>
    	<TextBlock HorizontalAlignment="Left" Height="21" Margin="116,10,0,0" TextWrapping="Wrap" Text="Month" VerticalAlignment="Top" Width="50" FontSize="16"/>
    	<TextBlock HorizontalAlignment="Left" Height="21" Margin="291,10,0,0" TextWrapping="Wrap" Text="Year" VerticalAlignment="Top" Width="50" FontSize="16"/>
    	<Button x:Name="backButton" Content="Button" HorizontalAlignment="Left" Margin="5,2,0,0" Style="{StaticResource SnappedBackButtonStyle}" VerticalAlignment="Top"/>
    	<ListBox x:Name="year" VerticalAlignment="Top" Margin="291,33,10,0"/>
    	<ListBox x:Name="month" VerticalAlignment="Top" Margin="116,33,189,0" Height="183"/>
    	<ListBox x:Name="day" VerticalAlignment="Top" Margin="45,33,378,0" Height="183"/>

    </Grid>
</UserControl>
